{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
  "moduleDirectories": ["node_modules", "src", "tests"],
  "roots": [
    "<rootDir>/src",
    "<rootDir>/tests"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "moduleFileExtensions": ["js", "json"],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!src/config/**/*.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "verbose": true
}
